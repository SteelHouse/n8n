{
	"extends": "@n8n/typescript-config/tsconfig.common.json",
	"compilerOptions": {
		"target": "ES2015",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		"allowSyntheticDefaultImports": true,
		"strict": false
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules", "**/*.test.ts"]
}
